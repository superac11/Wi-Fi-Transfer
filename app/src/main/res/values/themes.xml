<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.WifiTransferDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">#000000</item> <!-- Set background color to black -->
        <item name="colorSurface">#121212</item> <!-- Darker surface color -->
        <item name="colorOnSurface">@color/white</item> <!-- Set text color on surface -->

        <!-- Adjust text color for better contrast -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Add other dark mode customizations as needed -->
    </style>

</resources>
